{
    "compilerOptions": {
        "module": "esnext",
        "lib": ["es2018"],
        "target": "es2018",
        "moduleResolution": "Node",
        "outDir": "dist",
        "baseUrl": "src/",
        "strict": true,
        "noImplicitAny": true,
        "removeComments": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": true,
        "strictNullChecks": false,
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules"
    ]
}
